{
  "name": "technoblog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:api": "pnpm --filter api run start:dev",
    "build:api": "pnpm --filter api run build",
    "test:api": "pnpm --filter api run test",
    "lint": "eslint --flag v10_config_lookup_from_file .",
    "format": "prettier --write .",
    "prepare": "husky",
    "mobile:dev": "cd apps/mobile && flutter run",
    "mobile:build": "cd apps/mobile && flutter build apk",
    "mobile:test": "cd apps/mobile && flutter test",
    "mobile:clean": "cd apps/mobile && flutter clean",
    "dev:all": "concurrently \"pnpm run dev:api\" \"pnpm run mobile:dev\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=24.4.0"
  },
  "type": "modeule",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.44.0"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --flag v10_config_lookup_from_file --fix"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
